<!-- app/views/welcome/index.html.erb -->
<!DOCTYPE html>
<html>
<head>
  <title>Bem-vindo</title>
  <style>
      body {
          font-family: Arial, sans-serif;
          margin: 0;
          padding: 0;
          background: linear-gradient(135deg, #00d0ff 30%, #7300ff 90%); /* Gradiente de vermelho para laranja */
          background-size: cover;
          color: #fff; /* Cor do texto */
          height: 100vh; /* Faz com que o fundo cubra toda a altura da tela */
      }

      /* Adicionando um padrão geométrico */
      body::before {
          content: "";
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          background-image: url('https://www.transparenttextures.com/patterns/asfalt-dark.png'); /* Padrão geométrico discreto */
          opacity: 0.3; /* Deixa o padrão mais suave */
          z-index: -1; /* Mantém o padrão atrás de todo o conteúdo */
      }

      .container {
          max-width: 600px;
          margin: 50px auto;
          padding: 20px;
          background: rgba(255, 255, 255, 0.9); /* Fundo branco translúcido para destacar o conteúdo */
          border-radius: 8px;
          box-shadow: 0 0 215px rgba(0, 0, 0, 0.2); /* Sombra suave */
          z-index: 1;
          text-align: center;
      }
      h1 {
          text-align: center;
          color: #000000; /* Cor do texto do título */
      }
      .link {
          display: block;
          margin: 15px 0;
          padding: 10px;
          text-align: center;
          color: #000000;
          background-color: #00daff; /* Cor do botão */
          text-decoration: none;
          border-radius: 5px;
          transition: background-color 0.3s;
      }
      .link:hover {
          background-color: #00df13; /* Cor ao passar o mouse */
      }
  </style>
</head>
<body>
<div class="container">
  <h1>Bem-vindo à Home Page</h1>
  <%= link_to 'Clientes', clientes_path, class: 'link' %>
  <%= link_to 'Produtos', produtos_path, class: 'link' %>
  <%= link_to 'Pedidos', pedidos_path, class: 'link' %>
</div>
</body>
</html>
