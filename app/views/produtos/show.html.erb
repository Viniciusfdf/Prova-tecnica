<p style="color: green"><%= notice %></p>

<%= render @produto %>

<div class="mt-3">
  <p><strong>Criado em:</strong> <%= @produto.created_at.strftime("%d/%m/%Y %H:%M") if @produto.created_at %></p>
  <p><strong>Atualizado em:</strong> <%= @produto.updated_at.strftime("%d/%m/%Y %H:%M") if @produto.updated_at %></p>
</div>

<div>
  <%= link_to "Edit this produto", edit_produto_path(@produto) %> |
  <%= link_to "Back to produtos", produtos_path %>

  <%= button_to "Destroy this produto", @produto, method: :delete %>
</div>
